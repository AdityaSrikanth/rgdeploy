{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "vpcId": "",
    "subnetId": "",
    "awsProfile": "default",
    "awsRegion": "",
    "RG_HOME": "/opt/deploy/sp2",
    "RG_SRC": "/home/ubuntu",
    "amiName": "Ubuntu20.04_MongoDB3.6_Docker-ce20.10"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{user `awsProfile`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `awsRegion`}}",
      "vpc_id": "{{user `vpcId`}}",
      "subnet_id": "{{user `subnetId`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `amiName`}}",
      "associate_public_ip_address": "true"
    }
    ],
  "provisioners": [
   {
      "type": "file",
      "source": "docker-compose.yml",
      "destination": "${RG_SRC}/"
    },
    {
      "type": "file",
      "source": "nginx.conf",
      "destination": "${RG_SRC}/"
    },
    {
       "type": "file",
        "source": "config",
        "destination": "${RG_SRC}/configs/"
    },
   {
      "type": "shell",
      "script": "./provisioners/provision-docker.sh"
    },
    {
      "type": "shell",
      "script": "./provisioners/provision-cfn-helper.sh"
    },
    {
      "type": "file",
      "source": "scripts",
      "destination": "/home/ubuntu/scripts"
    },
    {
       "type": "file",
        "source": "config",
        "destination": "${RG_SRC}/config"
    },
    {
      "type": "shell",
      "script": "./provisioners/provision-rg.sh"
    },
    {
      "type": "shell",
      "environment_vars": ["MONGO_VERSION=3.6","MONGO_Full_VERSION=23"],
      "script": "./provisioners/provision-mongo.sh",
      "pause_before": "10s"
    },
    {

      "type": "shell",
      "inline": [
         "sudo cp --recursive scripts /usr/local/sbin"
        ]
    }
  ]
}
